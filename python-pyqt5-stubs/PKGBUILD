pkgbase='python-pyqt5-stubs'
pkgname=('python-pyqt5-stubs')
_module='PyQt5-stubs'
pkgver='5.13.1.3'
pkgrel=1
pkgdesc="PEP561 stub files for the PyQt5 framework"
url="https://github.com/stlehmann/PyQt5-stubs"
depends=('python')
makedepends=('python-setuptools')
license=('MIT')
arch=('any')
source=("https://files.pythonhosted.org/packages/source/${_module::1}/$_module/$_module-$pkgver.tar.gz")
sha256sums=('d1ebd54d12a71edb89b74ee8f5698dcf964946e56464156cc09f82b7b438cd7c')

build() {
    cd "${srcdir}/${_module}-${pkgver}"
    python setup.py build
}

package() {
    depends+=()
    cd "${srcdir}/${_module}-${pkgver}"
    python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
}
